#!/usr/bin/env node

'use strict';

console.error('%s%s',
  'Warning: The `lcoin cli` interface is deprecated.\n',
  'Please use `lcoin-cli` ($ npm install lclient).');

if (process.argv.length > 2 && process.argv[2] === 'wallet') {
  process.argv.splice(2, 1); // Evil hack.
  require('lclient/bin/lwallet-cli');
} else {
  require('lclient/bin/lcoin-cli');
}
